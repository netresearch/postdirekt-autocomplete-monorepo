{
  "name": "postdirekt-autocomplete-lib",
  "version": "1.0.0",
  "description": "Library for the Deutsche Post Direkt Autocomplete",
  "keywords": [],
  "main": "dist/lib/postdirekt-autocomplete-lib.js",
  "module": "dist/browser/postdirekt-autocomplete-lib.cjs.js",
  "types": "dist/types/autocomplete-lib.d.ts",
  "files": [
    "dist/lib",
    "dist/browser",
    "dist/types"
  ],
  "author": "Andreas MÃ¼ller <andreas.mueller@netresearch.de>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "lint": "yarn run tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "yarn run rimraf dist",
    "build": "yarn run tsc && rollup -c rollup.config.ts && yarn run typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "yarn run rollup -c rollup.config.ts -w",
    "test": "yarn run jest --coverage",
    "test:watch": "yarn run jest --coverage --watch",
    "test:prod": "yarn lint && yarn test --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "__DEV__": true
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/src/postdirekt-autocomplete-lib.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ],
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-json": "^4.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@types/jest": "^24.0.24",
    "@types/lodash": "^4.14.149",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/node": "^10.11.0",
    "colors": "^1.4.0",
    "coveralls": "^3.0.9",
    "cross-env": "^6.0.3",
    "es6-promise": "^4.2.8",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "jest-fetch-mock": "^3.0.0",
    "lint-staged": "^8.0.0",
    "lodash": "^4.17.15",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.14.3",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "^3.0.0",
    "rollup": "^1.20.0",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.15.5",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "postdirekt-autocomplete": ">=0.1.0"
  }
}
