        "@rollup/plugin-node-resolve": "^16.0.1",
        "rollup-plugin-css-only": "^4.5.2",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "rollup-plugin-delete": "^3.0.0",
        "lodash.camelcase": "^4.3.0",
        "tslib": "^2.6.2"
    }
}
