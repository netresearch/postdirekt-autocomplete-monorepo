{
    "name": "postdirekt-autocomplete-monorepo",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lint": "node_modules/.bin/eslint 'packages/*/src/**/*.{js,ts,tsx}'",
        "test": "node_modules/.bin/jest --coverage",
        "build:es5": "node_modules/.bin/tsc --build tsconfig.es5.json --force && node_modules/.bin/rollup -c rollup.config.es5.js",
        "build": "node_modules/.bin/tsc --build --force && node_modules/.bin/rollup -c rollup.config.esnext.js"
    },
    "resolutions": {
        "glob@^10": "^10.5.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.15.0",
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-terser": "^0.4.4",
        "eslint": "^9.15.0",
        "globals": "^17.0.0",
        "lodash.camelcase": "^4.3.0",
        "rollup": "^4.44.0",
        "rollup-plugin-css-only": "^4.5.2",
        "rollup-plugin-delete": "^3.0.0",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "tslib": "^2.6.2",
        "typescript": "^5.4.0",
        "typescript-eslint": "^8.15.0"
    },
    "packageManager": "yarn@4.12.0"
}
