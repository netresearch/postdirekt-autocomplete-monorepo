{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "ES2015",
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": false,
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "node_modules"
  ]
}
