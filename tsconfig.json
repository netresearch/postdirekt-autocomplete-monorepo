{
    "files": [],
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "baseUrl": ".",
        "paths": {
            "@postdirekt/*": [
                "packages/*/src"
            ]
        },
        "lib": [
            "DOM",
            "ESNext"
        ],
        "target": "ES2017"
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "references": [
        {
            "path": "packages/autocomplete-library"
        },
        {
            "path": "packages/autocomplete-sdk"
        },
    ],
    "exclude": [
        "**/node_modules",
        "**/dist",
        "**/build",
        "**/test",
        "**/spec",
        "**/tools",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
